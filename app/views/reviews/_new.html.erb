<%= bootstrap_form_for @review, :url => product_reviews_path(@product) do |f| %>
  <%= f.form_group :rating, label: { text: "Rating" } do %>
    <%= f.radio_button :rating, 1, label: "1 star" %>
    <%= f.radio_button :rating, 2, label: "2 stars" %>
    <%= f.radio_button :rating, 3, label: "3 stars", checked: true %>
    <%= f.radio_button :rating, 4, label: "4 stars" %>
    <%= f.radio_button :rating, 5, label: "5 stars" %>
  <% end %>
  <%= f.text_field :content %>
  <%= f.submit "Leave a Review", class: "btn btn-success" %>
<% end %>